= form_for @menu do |f|
  -if @menu.errors.any?
    #error_explanation
      %h2= "#{pluralize(@menu.errors.count, "error")} prohibited this menu from being saved:"
      %ul
        - @menu.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :time
    = f.number_field :time
  .field
    = f.label :contents
    = f.text_area :contents
  .actions
    = f.submit 'Save'
