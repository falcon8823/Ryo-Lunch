= form_for [:admin, @daily_menu], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :date, :class => 'control-label'
    .controls
      = f.date_select :date, :class => 'date_select'
  .control-group
    = f.label :breakfast, :class => 'control-label'
    .controls
      = f.text_area :breakfast, :class => 'text_area'
  .control-group
    = f.label :lunch, :class => 'control-label'
    .controls
      = f.text_area :lunch, :class => 'text_area'
  .control-group
    = f.label :dinner, :class => 'control-label'
    .controls
      = f.text_area :dinner, :class => 'text_area'
  .control-group
    = f.label :footer, :class => 'control-label'
    .controls
      = f.text_area :footer, :class => 'text_area'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_daily_menus_path, :class => 'btn'
