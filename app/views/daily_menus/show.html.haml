.page-header
  %h1
    = l @daily_menu.date, format: :long
    のメニュー

.row
  .span11
    %h2 【朝】
    %p= @daily_menu.breakfast
    %h2 【昼】
    %p= @daily_menu.lunch
    %h2 【夕】
    %p= @daily_menu.dinner

.row
  .span11
    .actions
      = link_to '戻る', daily_menus_path, class: 'btn'
      = link_to '編集', edit_daily_menu_path(@daily_menu), class: 'btn info'
      = link_to '削除', @daily_menu, confirm: '削除してもよろしいですか？',
        method: :delete, class: 'btn danger'
